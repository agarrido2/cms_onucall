{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "expired": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "description": {
      "type": "blocks"
    },
    "location": {
      "type": "json"
    },
    "price": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "selled": {
      "type": "datetime"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "selled",
        "refund"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "product"
    },
    "sku": {
      "type": "uid"
    }
  }
}
